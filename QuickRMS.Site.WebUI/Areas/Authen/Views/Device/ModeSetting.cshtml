@{
    ViewBag.Title = ViewBag.CurrentTitle + "";

}
@section css{
    @Styles.Render("~/bundles/css/jqueryui")
}

<div id="content-body" class="row">
    <div class="col-lg-3">
        @Html.Partial("_AreaDeviceTree")

    </div>
    <div class="col-lg-9">

        <form class="form-inline">
            <div class="widget-box">
                <div class="widget-title">
                    <span class="icon"><i class="icon-list"></i></span>
                    <h5>A路系统</h5>
                </div>

                <div class="widget-content contentArea">
                    <div class="row">

                        <div class="col-lg-3 col-lg-offset-1 modeTypeRow">
                            <div class="container-01">
                                <label class="radio-inline">
                                    <input type="radio" name="valve" value="option1" checked> A阀门
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="valve" value="option2"> B阀门
                                </label>
                            </div>
                            <div class="container-01">
                                <label class="radio-inline">
                                    <input type="radio" name="workday" value="option1" checked> 工作
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="workday" value="option2"> 周六
                                </label>
                            </div>
                            <div>
                                <div>
                                    <label class="radio">
                                        <input type="radio" name="optionsRadios" value="option1" checked>
                                        手动模式
                                    </label>
                                </div>
                                <div>
                                    <label class="radio">
                                        <input type="radio" name="optionsRadios" value="option2">
                                        工作5天+周六日
                                    </label>
                                </div>

                                <div>
                                    <label class="radio">
                                        <input type="radio" name="optionsRadios" value="option1">
                                        工作6天+周日
                                    </label>
                                </div>

                                <div>
                                    <label class="radio">
                                        <input type="radio" name="optionsRadios" value="option2">
                                        工作7天
                                    </label>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8 modeSetContainer">
                            <div class="row rowWidth">
                                <div class="col-lg-6">
                                    <input type="button" class="btn btn-primary" value="阀门全开" />
                                </div>
                                <div class="col-lg-6">
                                    <input type="button" class="btn btn-danger" value="阀门全关" />
                                </div>
                            </div>

                            <div class="row rowWidth">
                                <label class="control-label">设置:</label>
                                <input type="password" class="form-control">
                                <label class="control-label">%</label>
                                <input type="button" class="btn btn-default" value="运行">
                            </div>

                            <div class="row rowWidth">
                                <label class="control-label">当前:</label>
                                <input type="password" class="form-control">
                                <label class="control-label">%</label>
                                <input type="button" class="btn btn-default" value="更新">
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-4"></div>
                        <div class="col-lg-4">
                            <input class="btn btn-default" type="button" value="更新">
                            <input class="btn btn-default" type="button" value="保存并下发">
                        </div>
                    </div>

                </div>
            </div>
        </form>

    </div>
</div>

@section scripts{
    <script type="text/javascript">
       

    </script>
}
